extends /_layout

block content
  +breadcrumb

  .prose(class="xl:prose-lg")
    h1= title

    p.lead!= md.renderInline(intro)
    != content

    h2 The recipes
    each recipe in collections.cookbookRecipes
      article.max-w-none(class="sm:!mb-4 sm:flex sm:justify-between")
        h3(class="sm:!my-0")
          a.link(href=recipe.url)!= md.renderInline(recipe.data.title)
        .text-sm(class="sm:pl-4 xl:text-base")
          +recipeMeta(recipe.date, recipe.data.tags, utils.isDraft(recipe.data))
    else
      p No recipes yet. 🤷‍♂️
