extends /_layout

block content
  .mt-6.prose(class="xl:prose-lg")
    h1.text-center(aria-label=`Blog posts tagged with ${tag}`)
      .font-bold.mb-2.text-gray-500.text-xl(
        aria-hidden="true"
        class="xl:mb-4 xl:text-2xl"
      ) Blog posts tagged with#{' '}
      div= tag

    ol
      each post in collections.blogPostsWithTag(tag)
        li
          a.link(href=post.url)!= md.renderInline(post.data.title)
          span.whitespace-no-wrap
            | #{' '}(#[span.sr-only published on ]#{datetime.human(post.date)})
