mixin post_meta(date, tags = [])
  .text-gray-600
    span.sr-only Published on#{' '}
    time.tracking-wider.uppercase(datetime=datetime.robot(date))
      = datetime.human(date)

    if tags.length
      span.ml-3(aria-hidden="true") &ndash;
      span.sr-only &ndash; Tags:
      ul.inline
        each tag in tags
          li.inline.list-none.ml-3(class="!pl-0")
            a.link.link-tag(href=`/blog/tags/${slugify(tag)}/`)= tag
