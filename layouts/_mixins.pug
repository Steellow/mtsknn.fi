mixin post_meta(date, tags = [])
  .text-gray-700
    span.sr-only Published on#{' '}
    time.tracking-wider.uppercase(datetime=datetime.robot(date))
      = datetime.human(date)

    if tags.length
      span.mx-2(aria-hidden="true") ~
      span.sr-only &ndash; Tags:
      ul.inline
        each tag in tags
          li.bg-white.border.border-gray-500.inline.list-none.mr-1.py-px.rounded(
            class="!px-1"
          ): a.link(href=`/blog/tags/${tag.toLowerCase()}/`)= tag
