extends ./layout

block content
  .prose
    h1= title

    .prose-xl!= content

    h2 Coolest articles, hot off the press
    each post in collections.blog_posts
      article
        h3: a.link(href=post.url)= post.data.title
        .text-sm
          +post_meta(post.date, post.data.tags)
        != md.render(post.data.intro)
        a.link.text-sm.tracking-wider.uppercase(href=`${post.url}#continue`)
          | Continue reading
          .sr-only "#{post.data.title}"
