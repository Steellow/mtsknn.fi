extends ./layout

block content
  article.prose
    h1(class="!mb-6")= title
    .mb-6
      +post_meta(page.date, tags)
    .lead!= md.render(intro)
    hr(aria-hidden="true" class="!mb-0")

    //- Anchor for home page's "Continue reading" links
    #continue-reading.mb-12

    if content.startsWith('<nav class="table-of-contents">')
      h2.tracking-widest.uppercase(class="!text-base !text-gray-700")
        | Table of contents
      != content.replace('</nav>', '</nav><hr aria-hidden="true">') /* Ugly hack :-) */
    else
      != content
