{
  "scripts": {
    "_11ty:build": "npx @11ty/eleventy",
    "_11ty:watch": "npx @11ty/eleventy --serve",
    "_css:build": "cross-env NODE_ENV=production npm run _tailwind",
    "_css:watch": "watch \"npm run _tailwind\" ./assets/css/",
    "_tailwind": "tailwindcss build ./assets/css/main.css -o ./_site/main.css",
    "build": "npm run clean && npm run _11ty:build && npm run _css:build",
    "clean": "rm -rf ./_site/",
    "start": "npm run clean && concurrently --names 11ty,css npm:_11ty:watch npm:_css:watch"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@tailwindcss/typography": "^0.2.0",
    "light-date": "^1.1.3",
    "markdown-it": "^11.0.1",
    "markdown-it-link-attributes": "^3.0.0",
    "tailwindcss": "^1.8.10",
    "tailwindcss-important": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "watch": "^1.0.2"
  }
}
